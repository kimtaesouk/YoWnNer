<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Singup_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_sign_so_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#000000"/>


        <ImageView
            android:background="@drawable/circle_background"
            android:id="@+id/Iv_profile_image_singup"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/icon_nomalprofile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_email_signup"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/board"
                android:hint="이메일을 입력하세요"
                />
            <Button
                android:id="@+id/btn_signup_email_confire"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="중복확인"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="76dp"
            android:textSize="15sp"
            android:textColor="#FB0000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_email_certification"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="76dp"
                android:background="@drawable/board"
                android:hint="인증번호"
                />
            <Button
                android:id="@+id/btn_email_certification_check"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="확인"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_certification_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="76dp"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_pw_signup"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/board"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="76dp"
            android:textSize="15sp"
            android:textColor="#FB0000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_pwcheck_signup"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:background="@drawable/board"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_name_signup"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:background="@drawable/board"
                android:maxLines="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_birth_signup"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/board"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/sn_sex_signup"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="512dp"
                android:layout_marginLeft="38dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신분"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/sn_identity_signup"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="512dp"
                android:layout_marginLeft="38dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_Singup"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="가입 완료"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>

