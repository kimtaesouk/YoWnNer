<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer_Edit_Dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_name_edit_timer"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/board"
                android:hint="타이머 이름" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ib_timer_edit_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/baseline_control_point_24" />

                <ImageView
                    android:id="@+id/iv_timer_edit_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/radius3"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_edit_timer_cancel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:text="취소"/>

                <Button
                    android:id="@+id/btn_edit_timer_write"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:text="확인"/>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>