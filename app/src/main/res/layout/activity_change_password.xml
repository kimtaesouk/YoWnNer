<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword_activity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/back_sign_so_login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_back" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_pw_changepw"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/board"
                android:hint="비밀번호를 입력하세요"
                android:inputType="textPassword"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/et_pwconf_changepw"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="51dp"
                android:background="@drawable/board"
                android:hint="비밀번호를 입력하세요"
                android:inputType="textPassword"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/cb_pw_conf1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_pw_conf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영문(대문자)가 포함되어야 함"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/cb_pw_conf5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_pw_conf5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영문(소문자)가 포함되어야 함"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp">

        <CheckBox
            android:id="@+id/cb_pw_conf2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_pw_conf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="숫자가 포함되어야 함"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="27dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        >

        <CheckBox
            android:id="@+id/cb_pw_conf3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_pw_conf3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8자리 이상이어야 함"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="21dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_pw_conf4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_pw_conf4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호가 일치해야함"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="변경"/>


</LinearLayout>