<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 파란색 테두리를 그리기 위한 shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#005A5A5A" />
            <corners android:radius="5dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <item android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="4dp" android:color="#020202" />
        </shape>

        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="5dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>


</layer-list>